<body>
    <div class="body">
        <div class="position-absolute top-50 start-50 translate-middle">
            <div class="card">
                <div class="texts">
                    <img src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE1Mu3b?ver=5c31"
                        alt="">
                    <h2>Create Account</h2>
                    <form action="createaccount" method="post">

                        <label>Email</label><br>
                        <input type="text" name="uemail" class="input" required
                            placeholder="Email"><br>




                        <label>Password</label><br>
                        <input type="password" required class="input" placeholder="Password" name="upassword"><br>

                        <label>Conform Password</label><br>
                        <input type="password" required class="input" placeholder="Password" name="ucpassword"><br>
                        <button class="next" type="submit">Next</button>


                    </form>
                </div>
            </div>


        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>